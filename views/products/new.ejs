<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Product</title>
    <style>
        body{
            background-color: black;
            color: white;
        }
        button{
            color: white;
        }
        h2{
            text-align: center;
        }
        form{
            text-align: center;
        }
        form input{
            margin-top: 10px;
        }
        a{
            color: white;
            display: block;
            text-align: center;
        }
    </style>
</head>
<body>
    <h2>Add New Product</h2>
    <form action="/products" method="post">
        <input type="text" id="name" oninput="validate()" name="name" placeholder="Enter product name">
        <br>
        <input type="text" oninput="validate()" id="price" name="price" placeholder="Enter price">
        <br>
        <br>
        <select name="category" id="">
            <option value="fruit">Fruit</option>
            <option value="vegetable">Vegetable</option>
            <option value="diary">Diary</option>
        </select>
        <br><br>
        <button id="btnsubmit">submit</button>
    </form>
<br>
    <a href="/products">Back to All products</a>
</body>
<script>
    let button = document.querySelector('#btnsubmit');
    button.disabled = true;
    button.style.background = 'red';

    function validate(){
        if(document.querySelector('#name').value == '' || document.querySelector('#price').value == ''){
        button.style.background = 'red';
        button.disabled = true;
    }else{
        button.disabled = false;
        button.style.background = 'green'
        }
    }
    
</script>
</html>